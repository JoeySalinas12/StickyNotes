{
  "name": "markdown-notes",
  "version": "1.0.0",
  "description": "A beautiful, minimal notes application with real-time Markdown support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.markdownnotes.app",
    "productName": "Markdown Notes",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icons/app-icon.png",
      "darkModeSupport": true
    }
  }
}